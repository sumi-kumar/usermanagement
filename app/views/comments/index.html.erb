<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>
<div class="well" align="center">
  <div class="container">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Vendor</th>
      <th>Comment box</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_id %></td>
        <td><%= comment.vendor_id %></td>
        <td><%= comment.comment_box %></td>
        <td><%= link_to 'Show', comment, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Comment', new_comment_path, class: "btn btn-primary"  %>
