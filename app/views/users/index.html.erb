<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<div class="container">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.dob %></td>
        <td><%= user.gender %></td>
        <td><%= user.address %></td>
        <td><%= user.zipcode %></td>
        <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary"  %>
